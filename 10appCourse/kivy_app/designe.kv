<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "User Login"
                font_size: '20sp'
                size_hint: 0.3, 0.5
            TextInput:
                id: username
                hint_text: "User name"
            TextInput:
                id: password
                password: True
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    padding: 10, 10
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            Label:
                id: wrong_login
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 10
            Button:
                text: "Forgot password"
                background_color: 1, 1, 1, 0.2
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                text: "Sign up"
                on_press: root.sign_up()
                background_color: 1, 1, 1, 0.2
                color: 0.1, 0.7, 1, 1

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 15, 15
        spacing: 20, 20
        size_hint: 0.5, 1
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        Label:
            text: "Sign up page"
            font_size: '20sp'
            padding: 20,50
        TextInput:
            id: username
            hint_text: "User name"
        TextInput:
            id: password
            hint_text: "Password"
        RelativeLayout:
            Button:
                text: "Sign up"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)
                size_hint: 0.3, 0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Successfully signed up!!!"
        Button:
            text: "Loin page"
            on_press: root.login_page()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 15, 15
        spacing: 20, 20
        RelativeLayout:
            ImageButton:
                text: "Logout"
                on_press: root.logout()
                source:  'kivy_app\img\logout_hover.png' if self.hovered else 'kivy_app\img\logout_nothover.png'
                size_hint: 0.3, 0.3
                pos_hint: {'center_x': 0.95, 'center_y': 0.8}
        Label:
            text: "How do you feel?"
            font_size: '20sp'
        TextInput:
            id: user_text
            hint_text: "What would you like to say ?"
        RelativeLayout:
            Button:
                text: "Try me :)"
                on_press: root.get_text(root.ids.user_text.text)
                size_hint: 0.3, 0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        ScrollView:
            Label:
                id: user_output
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]


<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "signup_screen"
    SignUpScreenSuccess:
        name: "signup_screen_successul"
    LoginScreenSuccess:
        name: "login_screen_success"